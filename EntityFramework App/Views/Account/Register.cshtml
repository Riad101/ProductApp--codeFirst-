@model EntityFramework_App.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Register</h2>

@using (Html.BeginForm("Register","Account", FormMethod.Post))
 { 
<div class="form-row">
    <div class="form-group col-md-6">
        @Html.LabelFor(x => x.Username)
        @Html.TextBoxFor(x => x.Username, new { placeholder = "Username", @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Username)
    </div>

    <div class="form-group col-md-6">
        @Html.LabelFor(x => x.Password)
        @Html.PasswordFor(x => x.Password, new { placeholder = "Password", @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Password)
    </div>

    <div class="form-group col-md-6">
        @Html.LabelFor(x => x.ConfirmPassword)
        @Html.PasswordFor(x => x.ConfirmPassword, new { placeholder = "ConfirmPassword", @class = "form-control" })
        @Html.ValidationMessageFor(x => x.ConfirmPassword)
    </div>

    <div class="form-group col-md-6">
        @Html.LabelFor(x => x.Email)
        @Html.TextBoxFor(x => x.Email, new { placeholder = "Email", @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="form-group col-md-6">
        @Html.LabelFor(x => x.Mobile)
        @Html.TextBoxFor(x => x.Mobile, new { placeholder = "Mobile", @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Mobile)
    </div>

    <div class="form-group col-md-6">
        @Html.LabelFor(x => x.Address)
        @Html.TextBoxFor(x => x.Address, new { placeholder = "Address", @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Address)
    </div>

    <div class="form-group col-md-6">
        @Html.LabelFor(x => x.City)
        @Html.TextBoxFor(x => x.City, new { placeholder = "City", @class = "form-control" })
        @Html.ValidationMessageFor(x => x.City)
    </div>

    <div class="form-group col-md-6">
        @Html.LabelFor(x => x.Country)
        @Html.TextBoxFor(x => x.Country, new { placeholder = "Country", @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Country)
    </div>

    @Html.ValidationSummary()
    <button type="submit" class="btn btn-success">Register</button>
</div>

 }

